{% extends 'pages/baseindex.html.twig'%}

{% block body %}

	<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Category</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {% for post in posts %}
    <tr class="table-secondary">
      <td>{{post.id}}</td>
      <td>{{post.title}}</td>
      <td>{{post.description}}</td>
      <td>{{post.category}}</td>
      <td>
      	<a href="{{absolute_url( asset('') )}}view/{{post.id}}" class="btn btn-primary btn-xs">view</a>
      	<a href="{{absolute_url( asset('') )}}view/{{post.id}}" class="btn btn-success btn-xs">edit</a>
      	<a href="{{absolute_url( asset('') )}}view/{{post.id}}" class="btn btn-danger btn-xs">delete</a>
      </td>
    </tr>
    {% endfor %}
    
  </tbody>
</table> 
{% endblock %}